<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".registro">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_weight="3"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/RegistroCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bordes_negros"
            android:ems="10"
            android:hint="Correo"
            android:inputType="textEmailAddress"
            android:padding="20dp"
            android:textColor="#070707"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/RegistroCorreoConfirmar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bordes_negros"
            android:ems="10"
            android:hint="Confirmar Correo"
            android:inputType="textEmailAddress"
            android:padding="20dp"
            android:textColor="#131313"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/RegistroContraseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bordes_negros"
            android:ems="10"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:padding="20dp"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/RsgistroContraseñaRepetir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bordes_negros"
            android:ems="10"
            android:hint="Repetir Contraseña"
            android:inputType="textPassword"
            android:padding="20dp"
            android:textColor="#090909"
            android:textColorHint="#000000" />

        <CheckBox
            android:id="@+id/RegistroUnirse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:buttonTint="#000000"
            android:text="¿Quieres unirte a nuestra newsletter?"
            android:textColor="#000000" />

        <Button
            android:id="@+id/RegistroBoton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="#000000"
            android:padding="20dp"
            android:text="Registrarse" />

        <TextView
            android:id="@+id/RegistroIniciar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="end"
            android:clickable="true"
            android:onClick="textViewClicked"
            android:text="Iniciar Sesión"
            android:textColor="#000000" />

    </LinearLayout>
</LinearLayout>